@model WebAppCore.Models.BookViewModel.SearchSettingsVM

<div id="search-settings" style="margin-left: 10px; margin-right: 10px;">
    <div class="row">
        <div class="form-group col-xs-6">
            <label for="sel1">Category:</label>
            <select class="form-control" id="sel1">
                @foreach (var c in Model.Categories)
                {
                    <option>@c.Title</option>
                }
            </select>
        </div>

        <div class="form-group col-xs-6">
            <label for="sel1">Field:</label>
            <select class="form-control" id="sel2">
                @foreach (var f in Model.Categories.ToArray()[1].Fields)
                {
                    <option>@f</option>
                }
            </select>
        </div>
    </div>
</div>
<hr />